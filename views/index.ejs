<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>User Dashboard</title>
        <link rel="stylesheet" type="text/css" href="index.css"/>
    </head>
    <body>
        <div class="user-data">
            <h3>Dashboard</h3>
            <div class="main">
                <% if(error){ %>
                    <%= error %>
                    <div>
                        <a href="https://github.com/ankitdawra/kubernetes-node-application/blob/main/README.md" target="_blank">Check Readme File</a>
                    </div>
                <% } else{ %>
                    <table>
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Location</th>
                        </tr>
                        <% if(users.length){ %>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.name %></td>
                                    <td><%= user.age %></td>
                                    <td><%= user.location %></td>
                                </tr>
                            <% }) %>
                        <% } else{ %>
                            <tr>
                                <td colspan="3">No Records</td>
                            </tr>
                        <% } %>
                    </table>
                <% } %>
            </div>
        </div>
    </body>
</html>